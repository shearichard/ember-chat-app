<h1>Chat List Screen</h1>
<div class="row">
  <div class="col-md-5">
     <div class="list-group">
          {{#each model as |chats|}}
            {{#link-to "chats.chat" user class="list-group-item"}}{{chat.text}}{{/link-to}}
          {{/each}}
    </div>
    <form class="form-inline">
        {{input class="form-control" value=newChat.name placeholder="User Name"}}
        {{input class="form-control" value=newChat.text placeholder="Text"}}
      <button type="submit" {{action 'addChat' newChat}} class="btn btn-default">Send</button>
    </form>
  </div>
    <div class="col-md-7">
    {{outlet}}
  </div>
</div>
